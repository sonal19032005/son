#include <stdio.h>

// Function prototype
long factorial(int n);

int main() {
    int number;
    
    // Input from the user
    printf("Enter a number: ");
    scanf("%d", &number);
    
    // Calculate and display the factorial
    if (number < 0) {
        printf("Factorial is not defined for negative numbers.\n");
    } else {
        printf("Factorial of %d is %ld\n", number, factorial(number));
    }
    
    return 0;
}
